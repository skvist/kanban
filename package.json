{
  "name": "kanban-board",
  "version": "1.0.0",
  "description": "Kanban Board Project (final project for ramverk2 @ BTH)",
  "main": "index.js",
  "scripts": {
    "test": "nyc --all --reporter=html --reporter=text mocha --exit --reporter=spec tests/**/*.js",
    "pretest-users": "export DBWEBB_DSN=mongodb://localhost:3010/testkanban",
    "test-users": "nyc --all --reporter=html --reporter=text mocha --exit --reporter=spec tests/users-test/*.js",
    "pretest-kanban": "export DBWEBB_DSN=mongodb://localhost:3010/testkanban",
    "test-kanban": "nyc --all --reporter=html --reporter=text mocha --exit --reporter=spec tests/kanban-test/*.js",
    "test-realtime": "mocha tests/realtime-test/*.js",
    "test-web": "echo \"testweb - Nothing specified\" && exit 0",
    "posttest": "npm run lint",
    "postinstall": "(cd ./services/kanban/ && npm install);(cd ./services/users/ && npm install);(cd ./services/realtime/ && npm install);(cd ./services/web/ && npm install)",
    "lint": "npm run lint-users && npm run lint-kanban && npm run lint-realtime && npm run lint-web",
    "lint-users": "./node_modules/.bin/eslint --config .eslintrc.json \"services/users/**\"",
    "lint-kanban": "./node_modules/.bin/eslint --config .eslintrc.json \"services/kanban/**\"",
    "lint-realtime": "./node_modules/.bin/eslint --config .eslintrc.json \"services/realtime/**\"",
    "lint-web": "(cd ./services/web/ && npm run lint)",
    "scrutinizer": "nyc --all --reporter=clover mocha --exit --reporter=spec tests/**/*.js"
  },
  "author": "Niclas SÃ¶derkvist",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-http": "^3.0.0",
    "codecov": "^3.0.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.10.0",
    "eslint-config-defaults": "^9.0.0",
    "eslint-plugin-chai-friendly": "^0.4.0",
    "eslint-plugin-mocha": "^4.11.0",
    "eslint-plugin-react": "^7.5.1",
    "eslint-plugin-json": "^1.2.0",
    "jsonlint": "^1.6.2",
    "jsonwebtoken": "^8.1.0",
    "mocha": "^4.0.1",
    "mongoose": "^5.0.0-rc2",
    "nyc": "^11.2.1",
    "request": "^2.83.0"
  }
}
